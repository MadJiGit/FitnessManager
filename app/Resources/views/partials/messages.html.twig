{% for label, messages in app.flashes(['info', 'success', 'danger']) %}
    {% for msg in messages %}
        <script>
            setTimeout(function () {
                $('#msg').fadeOut('fast');
            }, 3000);
        </script>

        <div id="msg" class="alert alert-{{ label }}">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">Ã—</a>
            {{ msg }}
        </div>
    {% endfor %}
{% endfor %}
