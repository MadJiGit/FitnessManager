{% extends 'base.html.twig' %}

{% block title %}Admin Edit My Profile{% endblock %}


{% block main %}
    <h3>Edit User Profile</h3>
    <hr>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="row">
        <div class="col-md-6">
            <div class="col-md-6">
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
                {{ form_row(form.old_password) }}
                {{ form_row(form.new_password) }}
                {% for role in user.roles %}
                    {{ role }}
                {% endfor %}
                {{ form_row(form.role) }}
                {{ form_row(form.enabled) }}
                {{ form_row(form.submit) }}


                {{ form_rest(form) }}

                {#<button type="submit" class="btn btn-dark"><i class="fa fa-check"></i> Update</button>#}
                {#<a href="{{ path("admin_all_user") }}">#}
                    <button>Back</button>
                </a>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            window.setTimeout(function () {
                $('#old_password, #new_password').val('')
            }, 100)
        })
    </script>
{% endblock %}
